# ===========================================
# API Service Configuration
# ===========================================

# Enable/disable API services (set to true when ready to use live APIs)
API_SERVICE_ENABLED=false

# ===========================================
# Default Providers
# ===========================================
DEFAULT_FLIGHT_PROVIDER=amadeus
DEFAULT_HOTEL_PROVIDER=expedia

# ===========================================
# Amadeus API Configuration
# ===========================================
AMADEUS_ENABLED=false
AMADEUS_API_KEY=your_amadeus_api_key_here
AMADEUS_API_SECRET=your_amadeus_api_secret_here
AMADEUS_BASE_URL=https://api.amadeus.com

# ===========================================
# Sabre API Configuration
# ===========================================
SABRE_ENABLED=false
SABRE_CLIENT_ID=your_sabre_client_id_here
SABRE_CLIENT_SECRET=your_sabre_client_secret_here
SABRE_BASE_URL=https://api.sabre.com

# ===========================================
# Expedia API Configuration
# ===========================================
EXPEDIA_ENABLED=false
EXPEDIA_API_KEY=your_expedia_api_key_here
EXPEDIA_BASE_URL=https://api.expedia.com

# ===========================================
# Booking.com API Configuration
# ===========================================
BOOKING_COM_ENABLED=false
BOOKING_COM_API_KEY=your_booking_com_api_key_here
BOOKING_COM_BASE_URL=https://distribution-xml.booking.com

# ===========================================
# Cache Configuration
# ===========================================
API_CACHE_ENABLED=true
CACHE_FLIGHT_SEARCH_TTL=300     # 5 minutes
CACHE_HOTEL_SEARCH_TTL=600      # 10 minutes
CACHE_FLIGHT_DETAILS_TTL=1800   # 30 minutes
CACHE_HOTEL_DETAILS_TTL=3600    # 1 hour

# ===========================================
# Rate Limiting
# ===========================================
API_RATE_LIMITING_ENABLED=true
API_REQUESTS_PER_MINUTE=60
API_BURST_LIMIT=10

# ===========================================
# Fallback Configuration
# ===========================================
API_FALLBACK_STATIC_DATA=true      # Use static data when APIs fail
API_SHOW_ERROR_MESSAGES=false      # Show detailed API errors to users
API_TIMEOUT_FALLBACK=true          # Fallback on API timeouts